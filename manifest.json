{
    "manifest_version": 2,
    "name": "Coursera Subtitle Translation to Arabic",
    "version": "0.0.1",
    "content_scripts": [
        {
            "matches": [
                "*://www.coursera.org/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "browser_action": {},
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    }
}
